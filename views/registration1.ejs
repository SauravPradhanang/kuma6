    <%- include('partials/notifications') %>
    <main>
        <h2 id="main_heading">Sign Up To Become A Seller</h2>
        <div class="signup-container">
            <form action="/users/register" method="POST" name="myForm" class="form-grid" onsubmit="return formValidate()" enctype="multipart/form-data">
                <div class="full_width" id="fename">
                    <label class="block_label" for="name">Full Name:</label>
                    <input class="margin_left" type="text" id="name" name="fullname" required autofocus>
                    <span class="formerror"></span>
                    <!-- first name middle name last name, all caps or small or random -->
                </div>
                <div class="full_width" id="eaddress">
                    <label class="block_label" for="address">Address:</label>
                    <input class="margin_left" type="text" id="address" name="address" required>
                    <span class="formerror"></span>
                </div>
                <div class="full_width" id="enumber">
                    <label class="block_label" for="pnumber">Phone Number:</label>
                    <input class="margin_left" type="tel" id="pnumber" name="phoneno" min="0" max="9" required>
                    <span class="formerror"></span>
                    <div class="note">Note: You cannot enter your landline number.</div>
                    <!-- country code, number length & verification -->
                </div>
                <div class="full_width">
                    <label class="block_label" for="email">Email Address:</label>
                    <input class="margin_left" type="email" id="email" name="email" required>
                    <!-- validity & verification -->
                </div>
                <div class="full_width">
                    <label for="bank_name" class="block_label">Name of the Bank:</label>
                    <input class="margin_left" type="text" id="bank_name" name="bankname" required>
                </div>
                <div class="full_width">
                    <label for="acc_holder_name" class="block_label">Account Holder Name:</label>
                    <input type="text" class="margin_left" id="acc_holder_name" name="acc_holder_name" required>
                </div>
                <div class="full_width" id="eaccno">
                    <label for="acc_no." class="block_label">Bank Account Number:</label>
                    <input type="number" class="margin_left" id="acc_no." name="acc_no" required>
                    <span class="formerror"></span>
                </div>
                <div class="full_width" id="eusername">
                    <label class="block_label" for="usrname">Username:</label>
                    <input class="margin_left" type="text" id="usrname" name="username" required>
                    <span class="formerror"></span>
                    <!-- validity, matching usernames -->
                </div>
                <div class="full-width" id="Files">
                    <label class="block_label" for="usrname">Merchant Proof:</label>
                    <input class="margin_left" type="file" id="m-proof" name="m-proof" multiple="multiple" required>
                    <span class="formerror"></span>
                </div>
                
                <div class="grid-full">
                    <button onclick="" class="button" name="submit">Sign Up</button>
                    <!-- <button onclick="" class="button_style" name="reset">Reset</button> -->
                </div>
            </form>
        </div>
    </main>
